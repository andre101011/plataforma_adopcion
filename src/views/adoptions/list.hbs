<div class="form-main-wrapper">
    <img src="/img/silueta_logo.svg" class="silhouette">

    <div class="form-container" style="width: 80rem;">

        <div class="form-content">

            <h2 class="form-title page-content"> <i class="fas fa-cat"></i>
                Procesos de adopcion de la fundacion <i class="fas fa-dog"></i></h2>

            {{>message}}
            <div class="table-responsive">
                <table id="table" class="cell-border table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Fecha Estudio</th>
                            <th scope="col">Fecha Entrega</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each adoptions}}
                        <tr>
                            <td>{{id_adopcion}}</td>
                            <td>{{fecha_estudio}}</td>
                            <td>{{fecha_entrega}}</td>
                            <td>{{estado}}</td>
                            <td>
                                <div class="form-row ">
                                    <div class="col-md-3 mb-2">
                                        <a class="btn btn-info" href="/adoptions/detail/{{id_adopcion}}"><i
                                                class="fas fa-edit"></i> </a>
                                    </div>
                                    <div></div>
                                    <div class="col-md-3 mb-3">
                                        <a class="btn btn-danger" href="/adoptions/delete/{{id_adopcion}}"><i
                                                class="far fa-trash-alt"></i> </a>
                                    </div>

                                    <div class="col-md-3 mb-3">
                                        <a class="btn btn-danger" href="/adoptions/tracings/{{id_adopcion}}"><i
                                                class=""></i> Seguimientos </a>
                                    </div>

                                </div>
                            </td>
                        </tr>

                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('#table').DataTable({
            "language": {
                "lengthMenu": "Visualizando _MENU_ procesos por página",
                "zeroRecords": "No hay nada ",
                "info": "Página _PAGE_ de _PAGES_",
                "infoEmpty": "No hay elementos",
                "infoFiltered": "(filtrados de _MAX_ de procesos)",
                "search": "Buscar:",
                "paginate": {
                    "next": "Siguiente",
                    "previous": "Anterior"
                }
            },
            rowReorder: {
                selector: 'td:nth-child(2)'
            },
            responsive: true
        });
    });
</script>