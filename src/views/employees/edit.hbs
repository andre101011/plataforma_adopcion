                </div>

                <div class="form-group" >
                    <label>Fundaci칩n:</label>
                    <input type="text" class="form-control" required name="fundacion" aria-describedby="emailHelp"
                        value="{{employee.fundacion}}">
                </div>
                <div class="form-group" >
                    <label>Rol:</label>
                    <input type="text" class="form-control" readonly name="rol" aria-describedby="emailHelp"
                        value="{{employee.rol}}">
                </div>

                <div class="form-group">
                    <label>Contrase침a:</label>
                    <input type="text" name="password" required placeholder="nueva contrase침a" class="form-control"
                        placeholder="Password">

                </div>
                <div class="form-inline justify-content-end">

                    <a href="/" class="btn btn-secondary form-control mr-sm-2">
                        Descartar
                    </a>

                    <button type="submit" class="btn btn-success form-control mr-sm-2">
                        Guardar Cambios
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>