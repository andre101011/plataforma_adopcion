<div class="row row-cols-1 row-cols-md-4 p-4">
  {{#each animales}}
  <div class="col mb-2">
    <div class="card border-dark" style="width: 17rem;">
      <img src="{{ruta_imagen}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{nombre}}</h5>
        <p class="card-text">{{caracteristicas}}</p>
        <p class="card-text">Edad: {{edad}}</p>
        <a href="/amimals/delete" class="btn btn-danger">eliminar</a>
        <a href="/amimals/delete" class="btn btn-primary">marcar como adoptado</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>