<div class="container employee add">
    <div class="card mx-auto" style="width: 30rem;">
        <div class="card-body">
            <h5 class="card-title">Actualizacion De Datos</h5>
            <form action="/employees/update" method="POST">

                <div class="form-group">
                    <label>Nombre Completo</label>
                    <input type="text" name="nombre" value="{{empleado.nombre}}" class="form-control">
                </div>
                <div class="form-group">
                    <label >Correo Electronico</label>
                    <input type="email" class="form-control" name="email" 
                        aria-describedby="emailHelp" value="{{empleado.email}}" placeholder="Enter email">
                </div>
               
                <div class="form-group">
                    <label >Contrase√±a</label>
                    <input type="text" name="password" value="{{empleado.password}}"  class="form-control" 
                        placeholder="Password">
            
                <button type="submit" class="btn btn-primary">Actualizar Datos Del Empleado</button>
            </form>
        </div>
    </div>
</div>