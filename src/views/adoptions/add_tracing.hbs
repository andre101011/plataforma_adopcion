<div class="form-main-wrapper">
    <img src="/img/silueta_logo.svg" alt="" class="silhouette">
    <div class="form-container" style="width: 30rem;">
        <div class="form-content">
            <form action="/employees/add" method="POST" class="needs-validation" novalidate>
                <h2 class="form-title">Registro De Seguimientos</h2>

                <div class="form-group">
                    <label>Fecha:</label>
                    <input class="form-control" type="date" name="fecha_hora" id="example-date-input">
                </div>

                <div class="form-group">
                    <label>ID adoptante:</label>
                    <input type="text" name="id_adoptante" readonly class="form-control" required>

                </div>

                <div class="form-group">
                    <label>ID animal:</label>
                    <input type="text" name="id_animal" readonly class="form-control" required>

                </div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label>Anotaciones:</label>
                        <textarea class="form-control" rows="3" name="anotaciones" rows="3"></textarea>
                    </div>
                </div>
                <div class="wrap-login-form-btn">
                    <div class="login-form-bgbtn"></div>
                    <button type="submit" class="login-form-btn" id="submit">
                        Registrar Nuevo
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>