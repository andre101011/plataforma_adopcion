<img src="/img/pattern3.svg" class="silhouette">
<div class="form-main-wrapper animal-add">
    <div class="form-container">
        <div class="form-content">
            <form action="/adopters/form_part1" method="POST" >

                {{#if user}}
                <h2 class="form-title"> <i class="fas fa-cat"></i> Registrar Adoptante <i class="fas fa-dog"></i></h2>

                {{else}}
                <h2 class="form-title"> <i class="fas fa-cat"></i>Solicitud de adopción<i class="fas fa-dog"></i></h2>

                {{/if}}
                <h3>Datos personales</h3>
                <div class="form-row">
                    <div class="col-md-6 mb-3">
                        <label>Nombre:</label>
                        <input type="text" name="nombre" class="form-control" autofocus required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Apellido:</label>
                        <input class="form-control" type="text" name="apellido" required>
                    </div>
            
                    <div class="col-md-6 mb-3">
                        <label>N° documento:</label>
                        <input type="text" maxlength="10" name="documento_identidad" class="form-control" required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Telefono fijo:</label>
                        <input type="tel" name="tel_casa" maxlength="7" class="form-control">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>N°Celular:</label>
                        <input type="tel" maxlength="10" name="celular" class="form-control">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Municipo Residencia:</label>
                        <div class="form-group">
                            <select class="custom-select" name="ciudad" required>
                                <option value="">Seleccione...</option>
                                <option value="Armenia">Armenia</option>
                                <option value="Calarca">Calarcá</option>
                                <option value="Montenegro">Montenegro</option>
                                <option value="Circasia">Circasia</option>
                                <option value="Buenavista">Buenavista</option>
                                <option value="Filandia">Filandia</option>
                                <option value="Tebaida">Tebaida</option>
                                <option value="Quimbaya">Quimbaya</option>
                                <option value="Cordoba">Córdoba</option>
                                <option value="Genova">Génova</option>
                                <option value="Salento">Salento</option>
                                <option value="Pijao">Piajo</option>
                                <option value="Otro">Otro</option>
                            </select>

                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Dirección:</label>
                        <input type="text" name="direccion" class="form-control" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Ocupación:</label>
                        <input type="text" name="ocupacion" class="form-control">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label>Correo:</label>
                        <input type="email" name="correo" class="form-control">
                    </div>
                </div>
                <div class="form-inline justify-content-end">

                    <a href="javascript:history.back()" class="btn btn-secondary form-control mr-sm-2">Atras</a>
                    <button type="submit" class="btn btn-success form-control mr-sm-2"> Siguiente</button>
                </div>
            </form>
        </div>
    </div>
</div>