<div class="form-main-wrapper">
    <img src="/img/silueta_logo.svg" alt="" class="silhouette">
    <div class="form-container" style="width: 40rem;">
        <div class="form-content">
            <form action="/employees/update" method="POST">
                <h2 class="form-title">Actualizar Datos</h2>

                <div class="form-group">
                    <label>Nombre Completo</label>
                    <input type="text" name="nombre" value="{{empleado.nombre}}" class="form-control">
                </div>
                <div class="form-group">
                    <label>Correo Electronico</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp"
                        value="{{empleado.email}}" placeholder="Enter email">
                </div>

                <div class="form-group">
                    <label>Contrase√±a</label>
                    <input type="text" name="password" value="{{empleado.password}}" class="form-control"
                        placeholder="Password">

                </div>
                <div class="form-textbox">
                    <button type="submit" name="submit" id="submit" class="btn btn-primary submit">Actualizar Datos Del Empleado</button>
                </div>
            </form>
        </div>
    </div>
</div>