<div class="form-main-wrapper">
    <img src="/img/silueta_logo.svg"  class="silhouette">


    <div class="form-container" style="width: 30rem;">
        <div class="form-content">
            <form class="login-form" action="/employees/login" method="POST">
                <h2 class="form-title">INGRESO</h2>

                <div class="wrap-input m-b-23">
                    <span class="label-input">Correo electronico</span>
                    <input class="input" required type="email" name="email">
                    <span class="focus-input" data-symbol="&#xf007"></span>
                </div>

                <div class="wrap-input">
                    <span class="label-input">Contraseña</span>
                    <input class="input" required type="password" name="password">
                    <span class="focus-input" data-symbol="&#xf023"></span>
                </div>

                <div class="text-right p-t-8 p-b-31" style="padding-top: 1rem; padding-bottom: 1rem;">
                    <a href="#">
                        ¿Olvidó su contraseña?
                    </a>
                </div>
                 <!-- Captura de algun mensaje-->
                {{>message}}

                <div class="wrap-login-form-btn">
                    <div class="login-form-bgbtn"></div>
                    <button type="submit" class="login-form-btn">
                        Ingresar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>